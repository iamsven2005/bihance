generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")

}
model user {
  clerkId String @default(cuid()) @id
  first_name String
  last_name String
  profileImage String?
  email String
}
model event {
  eventid String @default(cuid()) @id
  managerId String
  location String
  image String
  description String
  name String
}
model userSubcription {
  id                   String @id @default(cuid())
  user_id              String @unique
  stripeCustomerId     String @unique
  stripeSubscriptionId String @unique
  stripePriceId        String @unique
  stripeEnd            DateTime @unique
}

model payroll {
  payrollid String @default(cuid()) @id
  userId String
  weekend Int
  weekday Int
  eventid String
}
model attendance{
  id String @default(cuid()) @id
  userId String
  imageurl String
  time DateTime
  location String
  eventId String
}

model feedback{
  id String @default(cuid()) @id
  description String
  userid String
}